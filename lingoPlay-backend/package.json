{
  "name": "lingoplay-backend",
  "version": "1.0.0",
  "description": "Backend API for LingoPlay video transcription and generation platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec \"node --experimental-specifier-resolution=node --loader ts-node/esm\" src/server.ts",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "type-check": "npx tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "type": "module",
  "keywords": [
    "video",
    "transcription",
    "ai",
    "google-cloud",
    "text-to-speech",
    "speech-to-text"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/speech": "^7.2.0",
    "@google-cloud/storage": "^7.17.0",
    "@google-cloud/text-to-speech": "^6.3.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "fluent-ffmpeg": "^2.1.3",
    "jimp": "^1.6.0",
    "ts-node-dev": "^2.0.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.4",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "supertest": "^6.3.4",
    "vitest": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
